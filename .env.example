# ============================================================
# Bodhi — Environment Variables
# Copy to .env and fill in values before running.
# ============================================================

# ── Secrets ─────────────────────────────────────────────────
# Generate with: openssl rand -hex 16
POSTGRES_PASSWORD=changeme
NEO4J_PASSWORD=changeme
GRAFANA_PASSWORD=changeme_admin

# ── Build ────────────────────────────────────────────────────
VERSION=latest
ARCH=arm64   # arm64 (RPi5) | amd64 (development x86_64)

# ── Application ─────────────────────────────────────────────
LOG_LEVEL=INFO    # DEBUG | INFO | WARNING | ERROR

# ── Feature Flags ───────────────────────────────────────────
VOICE_ENABLED=false
SCREEN_CAPTURE_ENABLED=true
CHARACTER_ANIMATION_ENABLED=true

# ── Cloud Integrations (optional — your own keys) ────────────
OPENAI_API_KEY=
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=
ELEVENLABS_API_KEY=
